<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book application</title>
    <link id="main-css" rel="stylesheet" href="/stylesheets/main.css">
</head>
<body>
    <%- include('../../partials/header.ejs') %>
    <h2 class="page-header">Search Books</h2>
    <form action="/books" action="GET">
        <div class="form-row">
            <div class="form-item">
                <label for="title">Title</label>
                <input type="text" id="label" name="title">
            </div>
        </div>
        <div class="form-row">
            <div class="form-item">
                <label for="publishedBefore">Published Before</label>
                <input type="date" id="publishedBefore" name="publishedBefore">
            </div>
            <div class="form-item">
                <label for="publishedAfter">Published After</label>
                <input type="date" id="publishedAfter" name="publishedAfter">
            </div>
        </div>
        <div class="form-row form-row-end">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>
    <br>
    <%- include('../../partials/bookGrid.ejs', { large: true }) %>

</body>
</html>